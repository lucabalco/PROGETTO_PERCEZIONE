import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt

# Carica il dataset (modifica il nome del file se necessario)
df = pd.read_csv("ObesityDataSet_raw_and_data_sinthetic.csv")

# Palette personalizzata (nessun blu, nessun arancione)
palette_custom = ["#7AC943", "#8E44AD"]  # verde e viola

# Crea la figura PRIMA di ogni comando che usa plt.*
plt.figure(figsize=(6, 4))

# Nessuna griglia
plt.grid(False)

# Countplot
sns.countplot(data=df, x="Gender", palette=palette_custom)

# Rimuove i bordi del grafico
sns.despine(left=True, bottom=True)

# Titoli e labels
plt.title("Sesso")
plt.xlabel("Gender")
plt.ylabel("Count")

# Layout ordinato
plt.tight_layout()

# Mostra il grafico
plt.show()
